function dxdt = Mevalonate_Model_ODES(t,x,p)
%Parameters
  
  %Dioxin Effect 
    % positive effect as a percent increase 
    DEP = 1;
    % negative effect as a percent decrease
    DEN = 1;   
    %Example: To account for a 10% change we set DEP = 1.1 and DEN = 0.9 simultaneously 

    r9 = p(1); 
    r1 = p(2) * DEN;
    r7 = p(3) * DEN;
    r11 = p(4);  
    r17 = p(5); 
    r19 = p(6); 
    r20 = p(7) ; 	
    r21= p(8); 	
    r23 = p(9); 	  	 
    r24 = p(10); 
    r25= p(11); 
    r3=p(12) * DEN;    
    r13= p(13);   					
    r5 = p(14) * DEN ; 				
    r15 = p(15); 
    r10= p(16);  
    r2= p(17); 		  
    r8= p(18); 	 
    r12= p(19); 	
    r18 = p(20); 				
    r22 = p(21); 							 										
    r28 = p(22)* DEN; 							
    r4 = p(23); 	
    r14 = p(24);
    r6 = p(25);
    r16 = p(26); 
    r26 = p(27); 
    r27 = p(28) * DEP;         
    r30 = p(29);   			
    r33 = p(30);    
    r31 = p(31);  
    r32 = p(32);
    a5 = p(33); 
    a6 = p(34);
    a7 = p(35); 
    a8 = p(36); 
    a10 = p(37); 
    a22 = p(38); 
    a24 = p(39); 
    a25 = p(40); 
    a29 = p(41) * DEP; 
    a32 = p(42); 
    aPL = p(43); 


dxdt = zeros (16,1);
%HMGCR mRNA
dxdt(1) = r1 * x(5)  - r2 * x(1);
%FDPS mRNA
dxdt(2) = r3 * x(5)  - r4 * x(2); 
%Lanosterol synthase mRNA
dxdt(3) = r5* x(5)  - r6 * x(3);
%Squalene Synthase mRNA 
dxdt(4) = r7 * x(5)  - r8 * x(4) ; 
%Proteins
%SREBP
dxdt(5)  = r9 * x(15) ^ a22 - r10 * x(5) ;
%HMG CoA Reductase
dxdt(6)  = r11 * x(1)  - r12 * x(6)  * x(11) ^ a5 * x(12) ^ a6 * x(14) ^ a7 * x(15) ^ a8 ;
% Farnesyl diphosphate synthase 
dxdt(7)  = r13 * x(2)  - r14 * x(7) ;
%Lanosterol Synthase 
dxdt(8)  = r15 * x(3)  - r16 * x(8) ;
%Squalene Synthase
dxdt(9)  = r17 * x(5)  - r18 * x(9) * x(15);
%Metabolites
%HMGCoA
dxdt(10)  = (r19 - r20 *  x(10)  * x(6)^ a10 *  x(7) ^ a25) * (1000/23);
%Geranyl-PP
dxdt(11)  =  (r20 *  x(10)   * x(6) ^ a10 * x(7) ^ a25 - r21 * x(11)  * x(7) ^ a29 - r33 * x(11)) * (1000/23);
%Farnesyl- PP
dxdt(12)  =  (r21 * x(11) * x(7) ^ a29  - r22 * x(12) - r23 * x(12) * x(9) ^ a24) * (1000/23);
%squalene
dxdt(13)  = (r23 * x(12) * x(9) ^ a24 - r24 * x(13) * x(8) ^ a32) * (1000/23);
%lanesterol
dxdt(14)  = (r24  * x(13) * x(8) ^ a32  - r25 *  x(14) ) * (1000/23) ;
%Hepatic Cholesterol
dxdt(15)  =   (r25 * x(14)  + r26 - r27 * x(15) - r28 * x(15) ^ aPL  +   r30 * x(16) ) * (1000/23);
%Plasma Cholesterol
dxdt(16) = r28 * x(15) ^ aPL - r30 * x(16) - r31 * x(16) + r32;
end




